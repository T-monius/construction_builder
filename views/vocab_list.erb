      <ul>
        <% word_object.forms.each do |form| %>
        <li>"<%= form.to_s %>"</li>
      </ul>
      <% end %>
    <% end %> -->
<% end %>

<% if signed_in? %>
  <p><a href="/vocab/<%= @list[:id] %>/add_word">Add a Word</a></p>
