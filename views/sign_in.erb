<form action="/sign_in" method="post">
  <div>
    <label for='username'>Username:</label>
    <input type="text" name="username" value="<%= @username || '' %>" />
  </div>
  <div>
    <label for='password'>Password:</label>
    <input type="text" name="password"/>    
  </div>
  <button>Sign in</button>
</form>